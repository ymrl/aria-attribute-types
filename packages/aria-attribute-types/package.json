{
  "name": "aria-attribute-types",
  "version": "0.0.1",
  "description": "Type-safe WAI-ARIA attributes for TypeScript.",
  "homepage": "https://github.com/ymrl/aria-attribute-types",
  "repository": {
    "type": "git",
    "url": "https://github.com/ymrl/aria-attribute-types.git"
  },
  "scripts": {
    "test:watch": "vitest",
    "test": "vitest --run",
    "typecheck": "vitest --typecheck --run",
    "typecheck:watch": "vitest --typecheck",
    "lint": "prettier . --check && eslint .",
    "lint:fix": "prettier . --write && eslint . --fix",
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "aria",
    "wai-aria",
    "typescript",
    "accessibility"
  ],
  "author": "ymrl",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.0.0",
    "prettier": "3.5.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vitest": "^3.1.3"
  }
}
